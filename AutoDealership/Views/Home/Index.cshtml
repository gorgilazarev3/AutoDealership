@section Scripts {
    <script>
        $(document).ready(function () {
            $('#featureCarousel').carousel({ interval: false });
            $('#featureCarousel').carousel('pause');
        });

        $(document).ready(function () {
            $("#nav-item-about").removeClass("my-navbar-active");
            $("#nav-item-contact").removeClass("my-navbar-active");
            $("#nav-item-home").addClass("my-navbar-active");

            $("#search-vehicles-btn").click(function (e) {
                e.preventDefault();
                window.location.href = "@Url.Action("Inventory", "Home")" + "?search=" + $("#search-vehicles").val();
            });

            $("#search-vehicles-div").keypress(function (event) {
                var id = event.which;
                if (id == 13) {
                    $('#search-vehicles-btn').trigger('click');
                }
            });
        });
    </script>
}

